generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  location   String
  start_date DateTime
  end_date   DateTime
  closed      Boolean  @default(false)
  race       Race[]
  ticket     Ticket[]
}

model Race {
  id          Int      @id @default(autoincrement())
  event_id    Int
  race_number Int
  closed      Boolean  @default(false)
  event       Event    @relation(fields: [event_id], references: [id])
  horse       Horse[]  @relation("RaceToHorse") // This relation needs a name for the cacade delete
  ticket      Ticket[]

  @@unique([event_id, race_number])
}

model Horse {
  id        Int      @id @default(autoincrement())
  race_id   Int
  number    Int
  winner    Boolean @default(false)
  scratch   Boolean @default(false)
  race      Race     @relation("RaceToHorse", fields: [race_id], references: [id], onDelete: Cascade)
  ticket    Ticket[]

  @@unique([race_id, number])
}

model Ticket {
  id            Int     @id @default(autoincrement())
  event_id      Int
  race_id       Int
  horse_id      Int
  created_dttm  DateTime  @default(now())
  redeemed_dttm DateTime?
  refunded_dttm DateTime?
  status        String
  horse         Horse   @relation(fields: [horse_id], references: [id])
  race          Race    @relation(fields: [race_id], references: [id])
  event         Event   @relation(fields: [event_id], references: [id])

  @@index([event_id], map: "idx_ticket_event")
}
generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  location   String
  start_date String
  end_date   String
  race       Race[]
  ticket     Ticket[]
}

model Race {
  id          Int      @id @default(autoincrement())
  event_id    Int
  race_number Int
  closed      Int      @default(0)
  event       Event    @relation(fields: [event_id], references: [id])
  horse       Horse[]
  ticket      Ticket[]

  @@unique([event_id, race_number])
}

model Horse {
  id        Int      @id @default(autoincrement())
  race_id   Int
  number    Int
  winner    Int      @default(0)
  scratch   Int      @default(0)
  race      Race     @relation(fields: [race_id], references: [id])
  ticket    Ticket[]

  @@unique([race_id, number])
}

model Ticket {
  id            Int     @id @default(autoincrement())
  event_id      Int
  race_id       Int
  horse_id      Int
  created_dttm  DateTime  @default(now())
  redeemed_dttm String?
  refunded_dttm String?
  status        String
  horse         Horse   @relation(fields: [horse_id], references: [id])
  race          Race    @relation(fields: [race_id], references: [id])
  event         Event   @relation(fields: [event_id], references: [id])

  @@index([event_id], map: "idx_ticket_event")
}
{
  "name": "@horse-race-raffle-tracker/api",
  "private": true,
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "NODE_ENV=development nodemon --exec 'tsx watch' src/index.ts",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:seed-test": "sqlite3 data/database.db < scripts/create-test-data.sql",
    "db:reset": "rm -f data/database.db && npm run prisma:generate && npm run prisma:push",
    "prisma:generate": "npx prisma generate",
    "prisma:push": "npx prisma db push",
    "prisma:studio": "npx prisma studio"
  },
  "dependencies": {
    "@horse-race-raffle-tracker/dto": "file:../dto",
    "@prisma/client": "^6.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "morgan": "^1.10.0",
    "sqlite": "^5.1.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.17",
    "nodemon": "^3.1.10",
    "prisma": "^6.7.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
